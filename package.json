{
  "name"        : "potter",
  "description" : "Draw something in 3D space",
  "version"     : "0.0.2",
  "repository"  : { "type": "git", "url": "git://github.com/daizoru/node-potter.git" },
  "license"     : "BSD",
  "author"      : { "name" : "Julian Bilcke", "email" : "julian.bilcke@daizoru.com", "url" : "http://github.com/daizoru" },
  "engines"     : { "node": "0.6.x || 0.7.x" },
  "main"        : "./lib/potter",
  "directories" : { "lib" : "./lib", "examples" : "./examples", "test" : "./test" },
  "scripts"     : {
    "build"     : "coffee --compile --output lib/ src/",
    "watch"     : "coffee --watch --compile --output lib/ src/", 
    "test"      : "mocha",
    "html"      : "mocha --reporter doc"
  },
  "dependencies": {
     "pkginfo"     : "0.2.x",
     "put"         : "0.0.6"
  },
  "devDependencies": {
    "should"        : "0.6.x",
    "coffee-script" : "1.3.x"
  }
}
